@model (List<byte[]> imageBytesList, string directoryName)

<h2 style=" text-align: center;
  font-weight: 700;
  font-size: 125px;
  line-height: 130px;margin-bottom:50px;
">
    @Model.directoryName
</h2>
<div class="container-fluid">
    @for (int i = 0; i < Model.imageBytesList.Count; i += 2)
    {
        <div class="row mb-5">
            <div class="col-md-6 mb-4">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.imageBytesList[i])" class="img-fluid rounded shadow-lg" style="height: 1700px !important; object-fit: contain; border-radius:50px !important" />
            </div>

            @if (i + 1 < Model.imageBytesList.Count)
            {
                <div class="col-md-6 mb-4">
                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.imageBytesList[i + 1])" class="img-fluid rounded shadow-lg" style="height: 1700px !important; object-fit: contain; border-radius:50px !important" />
                </div>
            }
        </div>
    }
</div>
